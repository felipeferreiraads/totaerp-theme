.faq
    margin-top: 50px
    h3
        margin-bottom: 50px
    details
        width: 100%
        border-radius: 5px
        box-shadow: 0 2px 10px 0 rgba(87, 87, 87, 0.5)
        background: #fff
        &[open]
            summary
                .icon
                    transform: rotate(180deg)
        &:not(:last-child)
            margin-bottom: 20px
        summary
            padding: 0 25px
            display flex
            justify-content: space-between
            align-items: center
            font-size: 20px
            color: $color.secondary
            font-weight: bold
            +above($bp.lg)
                height: 60px
            +below($bp.lg)
                padding: 15px
            .icon-chevron-down
                font-size: 25px
        .info
            padding: 25px
            p
                font-size: 18px
                &:not(:last-child)
                    margin-bottom: 20px

.support
    margin-top: 50px
    h3
        margin-bottom: 50px
    p
        font-size: 18px