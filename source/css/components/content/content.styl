.content
    padding: 100px 0
    +below($bp.lg)
        padding: 50px 0
    &.section-faq
        padding: 100px 0 50px
    &.pricing
        padding: 50px 0
    h2
        margin-bottom: 40px
    .container > p
        font-size: 18px
        line-height: 1.5
    .scroll-table
        +below($bp.lg)
            overflow-x: scroll

.nf-links
    display: flex
    flex-wrap: wrap
    justify-content: space-between
    margin-top: 50px
    max-width: 800px
    a
        display: block
        font-size: 16px
        text-transform: uppercase
        font-weight: bold
        letter-spacing: 1.3px
        color: $color.secondary
        &:hover
            span.text
                text-decoration: underline
        +above($bp.sm)
            width: 33.33%
            &:nth-child(n+4)
                margin-top: 20px
        +below($bp.sm)
            width: 50%
            &:nth-child(n+3)
                margin-top: 20px
        +below($bp.xs)
            font-size: 14px

.grid-support
    display flex
    justify-content: space-between
    margin-top: 100px
    +below($bp.lg)
        flex-wrap: wrap
        margin-top: 50px
    > *
        +above($bp.lg)
            flex: 1
            &:not(:last-child)
                margin-right: 10%
        +between($bp.sm, $bp.lg)
            width: 48%
            &:nth-child(n+3)
                margin-top: 40px
        +below($bp.sm)
            width: 100%
            &:nth-child(n+2)
                margin-top: 40px

.card-support
    display flex
    flex-direction: column
    i
        font-size: 30px
        color: $color.secondary
        margin-bottom: 20px
    h3
        margin-bottom: 20px
        align-self: flex-start
    p
        font-size: 18px
    &:hover
        h3
            &::after
                width: 100%

.fidelity-text
    max-width: 695px
    margin: 50px auto 0