.banner-internal
    padding: 120px 0 20px
    background-image: $gradient-main
    overflow hidden
    position relative
    +above($bp.lg)
        height: 350px
    h1
        font-size: 30px
        color: white
        text-shadow: 0 2px 10px rgba(0, 0, 0, 0.5)
        margin-bottom: 40px
        +below($bp.lg)
            font-size: 25px
            margin-bottom: 20px
    p
        text-shadow: 0 2px 10px rgba(0, 0, 0, 0.5)
        color: white
        line-height: 1.5
        +above($bp.lg)
            font-size: 18px
    img
        height: 115%
        position: absolute
        top: -7.5%
        right: 3%
    .blog
        font-size: 25px
        text-shadow: 0 2px 10px rgba(0, 0, 0, 0.5)
        color white
        margin-bottom: 15px
        font-weight: bold
        display inline-block

.share-box
    display flex
    flex-wrap: wrap
    justify-content: center
    &.white
        > *
            color: white !important
        .title
            text-shadow: 0 2px 10px rgba(0, 0, 0, 0.5)
    .title
        width: 100%
        font-size: 18px
        font-weight: bold
        text-align: center
        color: #242424
        margin-bottom: 10px
    a
        color: $color.primary
        display: inline-block
        span
            font-size: 25px
        &:nth-child(3)
            span
                font-size: 30px
        &:not(:nth-child(3))
            margin-top: 3px
        &:not(:last-child)
            margin-right: 10px