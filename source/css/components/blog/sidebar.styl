.sidebar
    +below($bp.lg)
        margin-top: 50px
    .box
        &:not(:last-child)
            margin-bottom: 50px
    nav
        a
            font-size: 18px
            font-weight: bold
            display: block
            &:not(:last-child)
                margin-bottom: 15px
            &::before
                content: ''
                width: 5px
                height: 5px
                border-radius: 100%
                background: $color.secondary
                margin: 0 8px 2px 0
                display: inline-block
            &:hover
                text-decoration: underline

.searchform
    width: 100%
    position relative
    input
        width: 100%
        border-radius: 5px
        height: 50px
        border: none
        box-shadow: 0 2px 10px 0 rgba(87, 87, 87, 0.5)
        padding: 0 15px
        &::placeholder
            opacity 1
    button
        width: 50px
        height: 50px
        background: #fff
        text-align: center
        font-size: 20px
        position: absolute
        top: 0
        right: 0
        border: none