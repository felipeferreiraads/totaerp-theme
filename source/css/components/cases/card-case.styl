.grid-cases-sidebar
    display: flex
    flex-wrap: wrap
    aside
        +above($bp.lg)
            width: 20%
        +below($bp.lg)
            width: 100%
            margin-top: 50px

.grid-cases
    flex: 1
    +above($bp.lg)
        padding-right: 50px
    > *:not(:last-child)
        margin-bottom: 80px

.card-case
    display: flex
    align-items: center
    &.reverse
        +above($bp.lg)
            flex-direction: row-reverse
            figure
                +above($bp.lg)
                    margin-right: 0
                    margin-left: 30px
            .client
                align-items: flex-start
    +below($bp.lg)
        flex-direction: column
        justify-content: center
    figure
        width: 200px
        height: 200px
        border-radius: 100%
        overflow hidden
        +above($bp.lg)
            margin-right: 30px
        +below($bp.lg)
            margin-bottom: 20px
            width: 150px
            height: 150px
        img
            width: 100%
            height: 100%
            object-fit: cover
            object-position: center
    .text
        flex: 1
        display flex
        +below($bp.lg)
            flex-direction: column
        .fa
            font-size: 40px
            color: $color.secondary
            margin-right: 25px
            +below($bp.lg)
                margin-bottom: 20px
        p
            font-size: 18px
            font-weight: bold
            line-height: 1.8
            text-align: justify
            +below($bp.lg)
                text-align: center
    .client
        display flex
        flex-direction: column
        align-items: flex-end
        margin-top: 20px
        +below($bp.lg)
            align-items: center
        .name
            font-weight: bold
            font-size: 18px
            margin-bottom: 5px
        .enterprise
            font-weight: bold
            font-size: 18px
            color: $color.secondary
            +below($bp.lg)
                text-align: center
    a
        margin-top: 30px
        float: right