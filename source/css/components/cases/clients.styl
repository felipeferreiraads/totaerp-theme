.clients
    margin-top: 100px
    position relative
    h2
        margin-bottom: 80px
    .grid
        margin-top: 50px
        padding: 20px 0
        position relative
        &::before, &::after
            content: ''
            width: 15%
            height: 100%
            position absolute
            top: 0
            z-index: 1
        &::before
            background: linear-gradient(to right, #f5f6f8 10%, rgba(90,90,90,0))
            left: 0
        &::after
            background: linear-gradient(to left, #f5f6f8 10%, rgba(90,90,90,0))
            right: 0
        .owl-item
            height: 150px
            display: flex
            justify-content: center
            align-items: center
        img
            max-width 150px
            max-height: 150px
    button
        padding: 0
        margin: 0
        border: none
        background: transparent
        font-size: 45px
        color: $color.secondary
        position: absolute
        outline: none
        cursor pointer
        top: 65%
        transform: translateY(-50%)
        z-index: 2
    .prev-clients
        left: 0
    .next-clients
        right: 0