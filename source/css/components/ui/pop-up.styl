.pop-up
    width: 100%
    height: 100vh
    position: fixed
    top: 0
    left 0
    background: rgba(0,0,0,0.6)
    z-index: 999999
    display: none
    opacity: 0
    &.open
        display: block
        opacity 1


.pop-up-close
    position: absolute
    top 20px
    right: 20px
    cursor pointer
    background: transparent
    border: none
    padding: 0
    color: #fff
    font-size: 30px
    +below($bp.lg)
        font-size: 20px

.pop-up-content
    width: 100%
    height: 100%
    padding: 50px 20px
    display: flex
    justify-content: center
    align-items: center
    img
        max-width 100%