.ui-form
    background: white
    box-shadow: 0 2px 10px 0 rgba(87, 87, 87, 0.5)
    border-radius: 5px
    overflow hidden
    display flex
    flex-wrap: wrap
    justify-content: space-between
    padding: 30px 20px
    +above($bp.lg)
        padding: 65px 40px 55px
        max-width 520px
    h2
        margin-bottom: 10px
    h3
        margin-bottom: 20px
    p
        margin-bottom: 25px
        font-size: 14px
    .field
        width: 100%
        margin-bottom: 25px
        +above($bp.lg)
            &.half
                width: 48%
    label
        display: block
        margin-bottom: 7px
        font-size: 14px
        font-weight: bold
        text-transform: uppercase
        letter-spacing: .4px
        color: $color.secondary
    input, textarea, select
        width: 100%
        height 50px
        border-radius: 5px
        background: #e6e6e6
        border: none
        padding: 0 20px
        color: #666
        &::placeholder
            opacity: 1
        &.error
            border: 1px solid $color.danger
    textarea
        height: 135px
        padding: 20px
        resize: none
        margin-bottom: 15px
    select
        appearance none
        -moz-appearance none
    .select
        position: relative
        &::after
            content: ''
            width: 0
            height: 0
            border-style: solid
            border-width: 5px 5px 0 5px
            border-color: #989898 transparent transparent transparent
            position: absolute
            top: 50%
            right: 20px
            transform: translateY(-50%)
    .ui-button
        width: 100%
        height: 50px
    .wpcf7-not-valid-tip
        color: $color.danger !important
    .wpcf7-response-output
        border-color: #ffeeba
        background: #fff3cd
        color: #856404
        border-radius: 3px
        padding: 10px