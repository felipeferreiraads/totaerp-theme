.grid-switch
    display: flex
    justify-content: center
    align-items: center
    margin-bottom: 50px
    &.package
        margin: 30px 0 20px
        justify-content: flex-start
    > *:not(:last-child)
        margin-right: 15px
    &:not(.package)
        &:first-child
            +above($bp.lg)
                margin-left: 200px
    span
        text-transform: uppercase
        font-weight: 600
        font-size: 14px
        letter-spacing: 1px
        i
            color: #818285
            font-style: normal

.switch
    position: relative
    display: inline-block
    width: 50px
    height: 26px
    input
        opacity: 0
        width: 0
        height: 0
        &:checked + .slider:before
            transform: translateX(24px)

.slider
    position: absolute
    cursor: pointer
    top: 0
    left: 0
    right: 0
    bottom: 0
    background-color: #bebebc
    transition: .4s
    &::before
        position: absolute
        content: ""
        height: 18px
        width: 18px
        left: 4px
        bottom: 4px
        background-color: $color.secondary
        transition: .4s
    &.round
        border-radius: 22px
        &::before
            border-radius: 50%

.mensal-plan
    display none