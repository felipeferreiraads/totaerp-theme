.banner-landing
    height: 650px
    position relative
    .overlay
        width: 100%
        height 100%
        background-image: linear-gradient(to bottom, rgba(54,56,75,.8), rgba(10,116,191,.3))
        z-index: 1
        padding-top: 100px
        position relative
    .container
        height: 100%
    .left
        height: 100%
        display flex
        flex-direction: column
        justify-content: center
        +above($bp.lg)
            width: 45%
        +below($bp.lg)
            max-width: 600px
    h1
        font-size: 40px
        color: white
        margin-bottom: 30px
        text-shadow: 0 0 3px rgba(0,0,0,.5)
        +below($bp.lg)
            font-size: 28px
    p
        font-size: 24px
        color: white
        margin-bottom: 80px
        text-shadow: 0 0 3px rgba(0,0,0,.5)
        +below($bp.lg)
            font-size: 20px
            margin-bottom: 50px
    img
        width: 100%
        height: 100%
        object-fit: cover
        object-position: center
        position absolute
        top: 0
        left: 0
        z-index: 0