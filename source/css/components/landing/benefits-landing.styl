.benefits-landing
    padding: 90px 0
    background: #fff
    .grid
        display flex
        flex-wrap: wrap
        +above($bp.lg)
            width: 50%
            > *
                width: 35%
                &:nth-child(n+3)
                    margin-top: 50px
                &:nth-child(odd)
                    margin-right: 12%
        +below($bp.lg)
            justify-content: space-between
            > *
                width: 45%
                &:nth-child(n+3)
                    margin-top: 50px

.card-benefit-landing
    display: flex
    flex-direction: column
    .icon
        font-size: 35px
        color: $color.secondary
        margin-bottom: 20px
    h3
        margin-bottom: 20px
    p
        font-size: 18px
        line-height: 1.5